<h1><%= @date.strftime('%-e %B %Y') %></h1>

<%= link_to 'Previous', date_path(@date - 1)%> | <%= link_to 'Next', date_path(@date + 1)%>

<h2>Journal</h2>
<% @journals.each do |journal| %>
  <h3><%= "#{journal.timestamp.strftime('%-I:%M%P')}" %></h3>
  <%= "#{auto_link(journal.text)}".html_safe %>
<% end %>

<h2>Tweets</h2>
<ul>
<% @tweets.each do |tweet| %>
  <li><%= "#{tweet.timestamp.strftime('%-I:%M%P')} #{auto_link(tweet.text)}".html_safe %></li>
<% end %>
</ul>

<h2>Checkins</h2>
<ul>
<% @checkins.each do |checkin| %>
  <li><%= "#{checkin.timestamp.strftime('%-I:%M%P')} #{checkin.venue}"%></li>
<% end %>
</ul>

<h2>Scrobbles</h2>
<ul>
<% @scrobbles.each do |scrobble| %>
